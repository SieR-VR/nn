{
  "name": "nn-language",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "node-gyp-build": "^4.8.1",
    "tree-sitter": "^0.21.1",
    "tree-sitter-cli": "^0.23.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "prebuildify": "^6.0.1"
  },
  "scripts": {
    "preinstall": "tree-sitter generate",
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js",
    "build": "yarn run build:tree-sitter && yarn run build:swc",
    "build:tree-sitter": "tree-sitter generate && yarn run install",
    "build:swc": "cd wrapper && yarn run -T swc . -d ../out --config-file ../.swcrc"
  },
  "main": "out/index.js",
  "types": "bindings/node",
  "typings": "wrapper/index.ts",
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "tree-sitter": [
    {
      "scope": "source.nn",
      "injection-regex": "^nn$"
    }
  ]
}
